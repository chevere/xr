{
    "name": "chevere/xr",
    "description": "Lightweight debug server utility built on ReactPHP.",
    "license": "AGPL-3.0-only",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://chevere.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "chevere/chevere": "^0.1",
        "clue/sse-react": "dev-master",
        "samejack/php-argv": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^9.4"
    },
    "autoload": {
        "files": [
            "src/Chevere/Xr/Components/Xr/functions.php"
        ],
        "psr-4": {
            "Chevere\\Xr\\Components\\": "src/Chevere/Xr/Components/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}