{
    "name": "chevere/xr",
    "description": "Lightweight debug server utility.",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://chevere.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "chevere/chevere": "^0.4",
        "chevere/throwable-handler": "^0.2",
        "chevere/trace": "^0.2",
        "chevere/var-dump": "^0.2",
        "rodber/php-sse-react": "^0.1",
        "samejack/php-argv": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^9.4"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Chevere\\Xr\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "update-cs": "curl --create-dirs -O --output-dir .ecs https://raw.githubusercontent.com/chevere/code-style/main/.ecs/ecs-chevere.php"
    },
    "scripts-descriptions": {
        "update-cs": "Update Chevere code style definition"
    }
}